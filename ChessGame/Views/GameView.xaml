<UserControl x:Class="ChessGame.WPF.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessGame.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- 평가 패널 (왼쪽) -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 평가 시스템 토글 -->
            <CheckBox x:Name="EvaluationToggle" 
                      Grid.Row="0"
                      Content="실시간 평가 표시"
                      IsChecked="True"
                      Margin="0,0,0,10"
                      Checked="EvaluationToggle_Checked"
                      Unchecked="EvaluationToggle_Unchecked"/>

            <!-- 평가 바와 수 평가 -->
            <Grid Grid.Row="1" x:Name="EvaluationPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 평가 바 -->
                <local:EvaluationBarControl x:Name="EvaluationBar" 
                                           Grid.Column="0"
                                           Margin="0,0,10,0"/>

                <!-- 수 평가 -->
                <local:MoveEvaluationControl x:Name="MoveEvaluation" 
                                            Grid.Column="1"/>
            </Grid>

            <!-- 현재 평가치 표시 -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="10"
                    Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="현재 평가" 
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="CurrentEvalText" 
                               Text="0.0"
                               FontSize="24"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 체스판 -->
        <local:ChessBoardControl x:Name="ChessBoard" 
                                 Grid.Column="2"
                                 Margin="20"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"/>

        <!-- 사이드 패널 (오른쪽) -->
        <Grid Grid.Column="3" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 현재 턴 표시 -->
            <Border Grid.Row="0" Margin="0,0,0,20" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="현재 턴" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock x:Name="CurrentPlayerText" 
                               Text="백색" 
                               FontSize="24" 
                               Foreground="Black"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- 게임 상태 -->
            <Border Grid.Row="1" Margin="0,0,0,20" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="게임 상태" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock x:Name="GameStatusText" 
                               Text="진행 중" 
                               FontSize="16" 
                               Foreground="Black"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- 오류 메시지 표시 -->
            <Border Grid.Row="2" 
                    x:Name="ErrorMessageBorder"
                    Background="#FFFF6B6B" 
                    CornerRadius="5" 
                    Visibility="Collapsed"
                    Margin="0,0,0,10">
                <TextBlock x:Name="ErrorMessageText" 
                           Foreground="White"
                           Padding="10"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- 기보 -->
            <Border Grid.Row="3" Margin="0,0,0,20" 
                    Background="White" 
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" 
                                      ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="기보" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="16,16,16,8"/>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="16,0,16,16">
                        <TextBlock x:Name="MoveHistoryText" 
                                   TextWrapping="Wrap"
                                   Foreground="Black"
                                   FontFamily="Consolas"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 버튼들 -->
            <StackPanel Grid.Row="4">
                <Button x:Name="NewGameButton"
                        Content="새 게임"
                        Height="40"
                        Margin="0,5"
                        FontSize="16"
                        Background="#3498db"
                        Foreground="White"
                        BorderThickness="0"
                        Click="NewGameButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="BackToMenuButton"
                        Content="메뉴로 돌아가기"
                        Height="40"
                        Margin="0,5"
                        FontSize="16"
                        Background="#95a5a6"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BackToMenuButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>