<UserControl x:Class="ChessGame.WPF.Controls.EvaluationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="50">

    <Grid Width="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 흑색 점수 -->
        <TextBlock x:Name="BlackScoreText" 
                   Grid.Row="0"
                   Text="0.0"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,5"
                   Foreground="White"/>

        <!-- 평가 바 -->
        <Border Grid.Row="1" 
                BorderBrush="#2c3e50" 
                BorderThickness="2"
                CornerRadius="5"
                Background="#34495e">
            <Grid>
                <!-- 백색 영역 -->
                <Rectangle x:Name="WhiteBar"
                           Fill="White"
                           VerticalAlignment="Bottom"
                           Height="300">
                    <Rectangle.RenderTransform>
                        <TranslateTransform x:Name="BarTransform"/>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <!-- 중앙선 -->
                <Rectangle Height="2"
                           Fill="#7f8c8d"
                           VerticalAlignment="Center"/>

                <!-- 체크메이트 표시 -->
                <TextBlock x:Name="MateIndicator"
                           Text="M3"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#e74c3c"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- 백색 점수 -->
        <TextBlock x:Name="WhiteScoreText" 
                   Grid.Row="2"
                   Text="0.0"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,5"
                   Foreground="Black"/>
    </Grid>
</UserControl>